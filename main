			]
		}

	#test_guild = await bot.fetch_guild(1114005940392439899)

	#await tests(tests_checklist, test_guild)

	#print('Exiting.')
	#exit()

	return


#Run
bot.load_extensions('cogs')
load_dotenv()
bot.run(environ.get("TOKEN"))
